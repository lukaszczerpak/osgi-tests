<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="MovieUnit">
    <jta-data-source>jdbc/__default</jta-data-source>
    <class>org.ancoron.movie.client.model.MovieImpl</class>
    <class>org.ancoron.movie.client.model.ActorImpl</class>
    <class>org.ancoron.movie.client.model.PersonImpl</class>
    <class>org.ancoron.movie.client.model.VideoImpl</class>
    <class>org.ancoron.movie.client.model.CharacterImpl</class>
    <class>org.ancoron.movie.client.model.DirectorImpl</class>
    <properties>
      <property name="connection.autocommit" value="false"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.persistence-context.flush-mode" value="COMMIT"/>
    </properties>
  </persistence-unit>
</persistence>
